            <Label Grid.Row="2" Margin="2,0,10,0" Content="Student First Name: " Style="{StaticResource PrimaryLabel}" Background="Orange" Foreground="Black"  FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="175"  Height="40"/>
            <Label Grid.Row="3" Margin="2,0,10,0" Content="Student Middle Name: " Style="{StaticResource PrimaryLabel}" Background="Orange" Foreground="Black"  FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="175"  Height="40"/>
            <Label Grid.Row="4" Margin="2,0,10,0" Content="Father's Last Name: " Style="{StaticResource PrimaryLabel}" Background="Orange" Foreground="Black"  FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="175"  Height="40"/>
            <Label Grid.Row="5" Margin="2,0,10,0" Content="Father's Middle Name: " Style="{StaticResource PrimaryLabel}" Background="Orange" Foreground="Black"  FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="175"  Height="40"/>
