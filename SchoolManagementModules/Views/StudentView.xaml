            <Label Grid.Row="0" Content="Student Profile" Style="{StaticResource PrimaryLabelCenter}" Background="Orange" Foreground="Black" Grid.ColumnSpan="4" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="400"  Height="40"/>
